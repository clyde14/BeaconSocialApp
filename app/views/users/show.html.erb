<% provide(:title, "View User Profile") %>
<h1>View <%= @user.nickname %> (@<%= @user.username %>)'s User Profile</h1>
<p id="notice"><%= notice %></p>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.nickname %> (@<%= @user.username %>)
      </h1>
    </section>
	<section class="stats">
		<%= render 'shared/stats' %>
	</section>
	<section class="user_actions">
	<% if logged_in? %>
		<% if current_user? @user %>
			<%= link_to 'Edit', edit_user_path(@user) %>
		<% else %>
			<%= render 'follow_form' if logged_in? %>
		<% end %>
	<% end %>
	</section>
  </aside>
  <div class="col-md-8">
    <% if @user.signal_posts.any? %>
      <h3>Signals (<%= @user.signal_posts.count %>)</h3>
      <ol class="signal_posts">
        <%= render @signal_posts %>
      </ol>
    <% end %>
  </div>
</div>