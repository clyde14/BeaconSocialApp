<% provide(:title, "View User Profile") %>
<h1>View User Profile</h1>
<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Nickname:</strong>
  <%= @user.nickname %>
</p>

<% if logged_in? %>
	<% if current_user? @user %>
		<%= link_to 'Edit', edit_user_path(@user) %>
	<% else %>
		<%= link_to 'Follow', '#' %>
	<% end %>
<% end %>
